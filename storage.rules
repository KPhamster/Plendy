rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Background images used on the Discovery cover view.
    match /cover_photos/{allPaths=**} {
      allow read: if true; // Publicly readable cover backgrounds
      allow write: if request.auth != null; // Restrict uploads to authenticated users
    }

    // Profile photos for users. Allow everyone to read so avatars render,
    // but only permit the authenticated owner to upload/delete their photo.
    match /user_photos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Review photos uploaded by users. Allow anyone to read (for displaying in reviews),
    // but only authenticated users can upload.
    match /review_photos/{reviewId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
